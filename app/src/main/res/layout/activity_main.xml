<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#F0F8FF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- Título de la app -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🌤️ Clima App"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/tvNoInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tienes internet"
            android:textSize="40sp"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <!-- Campo de entrada para ciudad -->
        <EditText
            android:id="@+id/etCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="🔍 Buscar Ciudad"
            android:inputType="text"
            android:drawableEnd="@android:drawable/ic_menu_search"
            android:imeOptions="actionSearch"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:textSize="16sp" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔍 Buscar Clima"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#3498DB"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnUbicacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📍 Ubicación Actual"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#E67E22"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Card para mostrar información del clima -->
        <LinearLayout
            android:id="@+id/layoutClima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="24dp"
            android:elevation="8dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvUltimaCiudadConsultada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ultima ciudad consultada ⬇️"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏙️ Selecciona una ciudad"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar favorito"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/ivFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fav"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvTemperatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🌡️ --°C"
                android:textSize="54sp"
                android:textStyle="bold"
                android:textColor="#E74C3C"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="☁️ Busca una ciudad para ver el clima"
                android:textSize="18sp"
                android:textColor="#7F8C8D"
                android:gravity="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvBtnPronostico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👆 Toca Aqui para ver el pronostico de 5 dias"
                android:textSize="18sp"
                android:textColor="#7F8C8D"
                android:gravity="center"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudades favoritas ⬇️"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvCiudadesFavorita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aun no ha añadido nada"/>

        </LinearLayout>

        <!-- Espacio flexible -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>


</ScrollView>